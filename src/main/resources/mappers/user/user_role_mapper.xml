<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.springboot_study.mapper.UserRoleMapper">

    <resultMap id="userResultMap" type="com.korit.springboot_study.entity.UserRole">
        <id property="userId" column="user_id"/>
        <id property="roleId" column="role_id"/>
    </resultMap>


    <insert id="insert" keyProperty="userRoleId" useGeneratedKeys="true">
        insert into user_role_tb
        values(default, #{userId}, #{roleId})
    </insert>

    <insert id="insertSelective">
        insert into user_role_tb
        select
            0,
            #{userId},
            role_id
        from
            role_tb
        where
            role_name = #{roleName}
    </insert>

</mapper>