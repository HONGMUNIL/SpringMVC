<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.springboot_study.mapper.BookMapper">
    <resultMap id="bookResultMap" type="com.korit.springboot_study.entity.Book">
        <id property="bookId" column="book_id" />
        <result property="bookName" column="book_name" />
    </resultMap>
    <resultMap id="authorResultMap" type="com.korit.springboot_study.entity.Author">
        <id property="authorId" column="author_id" />
        <result property="authorName" column="author_name" />
    </resultMap>
    <resultMap id="publisherResultMap" type="com.korit.springboot_study.entity.Publisher">
        <id property="publisherId" column="publisher_id" />
        <result property="publisherName" column="publisher_name" />
    </resultMap>

    <select id="selectBooksAll" resultMap="bookResultMap">
        select
            *
        from
            book_tb
    </select>
    <select id="selectAuthorsAll" resultMap="authorResultMap">
        select
        *
        from
        author_tb
    </select>
    <select id="selectPublisherAll" resultMap="publisherResultMap">
        select
        *
        from
        publisher_tb
    </select>

    <insert id="insertBook" keyProperty="bookId" useGeneratedKeys="true" >
        insert into book_tb
        values (default, #{bookName}, #{authorId}, #{isbn}, #{categoryId}, #{publisherId}, #{bookImgUrl})
    </insert>

    <insert id="insertAuthor" keyProperty="authorId" useGeneratedKeys="true" >
        insert into author_tb
        values (default, #{authorName})
    </insert>

    <insert id="insertPublisher" keyProperty="publisherId" useGeneratedKeys="true" >
        insert into publisher_tb
        values (default, #{publisherName})
    </insert>


</mapper>